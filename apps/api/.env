# API Server Configuration
PORT=3001

# Rabby API
RABBY_API_URL=https://api.rabby.io

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3002,http://localhost:5173,http://localhost:5174

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# PostgreSQL Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rabby_db
DATABASE_USER=rabby_user
DATABASE_PASSWORD=rabby_password

